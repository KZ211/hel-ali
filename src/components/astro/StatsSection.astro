---
interface Stat {
  value: string;
  label: string;
}

const stats: Stat[] = [
  {
    value: "5,000+",
    label: "Personas Ayudadas",
  },
  {
    value: "1,200+",
    label: "Familias Apoyadas",
  },
  {
    value: "300+",
    label: "Voluntarios",
  },
];
---

<section class="py-16 px-30">
  <div class="container mx-auto max-w-6xl">
    <h2 class="text-3xl font-bold text-gray-800 mb-12">Estad√≠sticas Clave</h2>

    <div class="grid md:grid-cols-3 gap-8">
      {stats.map((stat) => (
        <div class="text-center">
          <p class="text-4xl font-bold text-teal-600 mb-2">{stat.value}</p>
          <p class="text-gray-600">{stat.label}</p>
        </div>
      ))}
    </div>
  </div>
</section>