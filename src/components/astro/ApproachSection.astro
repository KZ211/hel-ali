---
import { Home, GraduationCap, Heart } from "lucide-react";

interface Approach {
  icon: any;
  title: string;
  description: string;
}

const approaches: Approach[] = [
  {
    icon: Home,
    title: "Vivienda",
    description: "Proporcionando viviendas seguras y estables para familias necesitadas.",
  },
  {
    icon: GraduationCap,
    title: "Educación",
    description: "Apoyando programas educativos para niños y adultos.",
  },
  {
    icon: Heart,
    title: "Salud",
    description: "Asegurando el acceso a servicios de salud de calidad para todos.",
  },
];
---

<section class="py-16 px-30 bg-gray-50">
  <div class="container mx-auto max-w-6xl">
    <h2 class="text-3xl font-bold text-gray-800 mb-12">Nuestro Enfoque</h2>

    <div class="grid md:grid-cols-3 gap-6">
      {approaches.map((approach) => (
        <div
          class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-md transition-shadow duration-200"
        >
          <div class="flex flex-col items-start">
            <div class="mb-4">
              <approach.icon className="w-8 h-8 text-gray-600" />
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-3">{approach.title}</h3>
            <p class="text-gray-600 text-sm leading-relaxed">{approach.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>