---
import { Home, GraduationCap, Heart } from "lucide-react";

interface Approach {
  icon: any;
  title: string;
  description: string;
}

const approaches: Approach[] = [
  {
    icon: Home,
    title: "Vivienda",
    description:
      "Proporcionando viviendas seguras y estables para familias necesitadas.",
  },
  {
    icon: GraduationCap,
    title: "Educación",
    description: "Apoyando programas educativos para niños y adultos.",
  },
  {
    icon: Heart,
    title: "Salud",
    description:
      "Asegurando el acceso a servicios de salud de calidad para todos.",
  },
];
---

<section class="bg-gray-800 py-12 sm:py-16 lg:py-20 px-4 sm:px-6 lg:px-8">
  <div class="container mx-auto max-w-6xl">
    <h2
      class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-800 mb-8 sm:mb-12 lg:mb-16 text-center sm:text-left"
    >
      Nuestro Enfoque
    </h2>

    <div
      class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-3 gap-4 sm:gap-6 lg:gap-8"
    >
      {
        approaches.map((approach) => (
          <div class="bg-white rounded-lg border border-gray-200 p-4 sm:p-6 lg:p-8 hover:shadow-md transition-shadow duration-200 text-center sm:text-left">
            <div class="flex flex-col items-center sm:items-start">
              <div class="mb-3 sm:mb-4">
                <approach.icon className="w-6 h-6 sm:w-8 sm:h-8 text-light-blue" />
              </div>
              <h3 class="text-lg sm:text-xl lg:text-2xl font-semibold text-light-blue mb-2 sm:mb-3">
                {approach.title}
              </h3>
              <p class="text-gray-600 text-sm sm:text-base leading-relaxed">
                {approach.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
